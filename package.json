{
  "name": "utn.ba-helper",
  "version": "7.1.0",
  "description": "A Chrome extension that makes navigating and using the UTN.BA - FRBA website easier.",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node' jest",
    "watch": "webpack --watch --config webpack.config.js",
    "build": "webpack --config webpack.config.js",
    "pack": "npm run build && npm run process-sourcemaps && node pack.js && open ./release",
    "process-sourcemaps": "embrace-web-cli upload -a 08sxm -t \"$(cat embrace-token)\" -p ./build"
  },
  "dependencies": {
    "@embrace-io/web-sdk": "^2.8.3",
    "chart.js": "^4.5.1",
    "jquery": "^3.7.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@embrace-io/web-cli": "^2.8.3",
    "adm-zip": "^0.5.16",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
